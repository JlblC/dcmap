
global _DEBUG=1;

global sub getdcxml 
{
	my $login,$pass,$sec= $_;
	my %post = 'action' => 'login', 'login' => $login, 'pwd' => $pass;
	my $r = webpost "$gameurl/frames/empire_info/on/$sec/asxml/", urlencode($post);
	savefile "$dcmapdir/temp/$login-$sec.xml",$r;
	return $r;
}

